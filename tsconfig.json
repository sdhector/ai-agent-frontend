{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@components/*": [
        "./app/components/*"
      ],
      "@screens/*": [
        "./app/screens/*"
      ],
      "@services/*": [
        "./app/services/*"
      ],
      "@hooks/*": [
        "./app/utils/hooks/*"
      ],
      "@contexts/*": [
        "./app/contexts/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "nativewind-env.d.ts"
  ],
  "exclude": [
    "node_modules",
    ".expo",
    "dist",
    "android",
    "ios",
    "components",
    "contexts",
    "hooks",
    "lib"
  ]
}
